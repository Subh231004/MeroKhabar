{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static"
    },
    {
      "src": "admin/package.json",
      "use": "@vercel/static"
    },
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/index.js" },
    { "src": "/admin", "dest": "/admin/index.html" },
    { "src": "/admin/(.*)", "dest": "/admin/$1" },
    { "src": "/(.*)", "dest": "/client/$1" }
  ]
}